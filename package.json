{
  "name": "openclaw-mac-fluid",
  "version": "1.0.0",
  "description": "OpenClaw Dashboard with Mac Fluid Design",
  "main": "main.js",
  "author": "Bernard Materu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmmateru/openclawapp.git"
  },
  "keywords": [
    "openclaw",
    "dashboard",
    "electron",
    "theme",
    "glassmorphism",
    "dark-theme",
    "mac-fluid",
    "css"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "apply": "bash scripts/apply.sh"
  },
  "build": {
    "appId": "com.openclaw.mac",
    "productName": "OpenClaw",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "preferences.html",
      "package.json",
      "build/**/*",
      "css/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
